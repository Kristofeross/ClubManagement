@model ClubManagement.Models.Account;
@if(TempData["Alert"] != null)
{
    <div class="alert alert-danger">
        @TempData["Alert"]
    </div>
}
<p>Register</p>
<form method="post" asp-action="AddAccount">
    @* <div>
        <label>Mail:</label>
        <input type="email" name="Email" required />
    </div> *@
    <div>
        <label asp-for="AccountName">AccountName:</label>
        <input type="text" asp-for="AccountName" required />
    </div>
    <div>
        <label asp-for="PasswordHash">Hasło:</label>
        <input type="password" asp-for="PasswordHash" required />
    </div>
    <div>
        <label asp-for="Role">Rola:</label>
        <select asp-for="Role">
            <option value="Player">Player</option>
            <option value="Coach">Coach</option>
            <option value="Admin">Admin</option>
        </select>
    </div>
    <div>
        <button type="submit">Register</button>
    </div>
</form>
